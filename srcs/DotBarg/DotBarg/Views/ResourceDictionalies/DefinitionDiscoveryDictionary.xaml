<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:d="clr-namespace:DotBarg.Views.ResourceDictionalies"
                    xmlns:c="clr-namespace:DotBarg.Views.Controls">

    <ControlTemplate x:Key="EditorTemplate">

        <Border 
            BorderBrush="Blue"
            BorderThickness="1">

            <DockPanel>

                <ToolBarTray DockPanel.Dock="Top">
                    <ToolBar>
                        <TextBlock Name="textBlock1" Text="Untitled" />
                    </ToolBar>
                </ToolBarTray>

                <c:TextEditorEx
                    x:Name="textEditor1">

                    <c:TextEditorEx.ContextMenu>
                        <ContextMenu>
                            <MenuItem Name="menuItem1" Header="定義場所を表示" />
                        </ContextMenu>
                    </c:TextEditorEx.ContextMenu>

                </c:TextEditorEx>

            </DockPanel>

        </Border>

    </ControlTemplate>

</ResourceDictionary>